{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        {% for product in category.products %}
            <div class="col-md-4">
                <div class="card mt-5">
                    <img src="{{ asset('img/' ~ product.image) }}" class="card-img-top" alt="{{ product.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.size}} </br> {{ product.price }}â‚¬</p>
                        <a href="{{ path('order_page', {id: product.id}) }}" class="btn btn-primary">Buy</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}